{
    "schema": "https://developer.microsoft.com/json-schemas/sp/view-formatting.schema.json",
    "hideSelection": true,
    "hideColumnHeader": true,
    "rowFormatter": {
      "elmType": "div",
      "attributes": {
        "class": "sp-row-card"
      },
      "children": [
        {
          "elmType": "div",
          "style": {
            "text-align": "left",
            "margin-left": "85px"
          },
          "children": [
            {
              "elmType": "div",
              "attributes": {
                "class": "sp-row-title"
              },
              "txtContent": "[$Title]",
              "style": {
                "font-size": "18px",
                "color": "#003F87"
              }
            },
            {
              "elmType": "span",
              "txtContent": "[$Category]",
              "style": {
                "border": "2px solid #DCDCDC",
                "border-radius": "3px",
                "padding": "2px 3px",
                "font-weight": "700",
                "color": "#606060",
                "font-size": "10px",
                "background-color": "#DCDCDC"
              }
            },
            {
              "elmType": "span",
              "txtContent": " > ",
              "style": {
                "color": "#606060"
              }
            },
            {
              "elmType": "span",
              "txtContent": "[$Subcategory]",
              "style": {
                "border": "2px solid #DCDCDC",
                "border-radius": "3px",
                "padding": "2px 3px",
                "font-weight": "700",
                "color": "#606060",
                "font-size": "10px",
                "background-color": "#DCDCDC"
              }
            },
            {
              "elmType": "div",
              "attributes": {
                "class": "sp-row-listPadding"
              },
              "txtContent": "[$Answer]",
              "style": {
                "margin-top": "10px",
                "font-size": "14px"
              }
            }
          ]
        }
      ]
    }
  }